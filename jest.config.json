{
	"preset": "ts-jest/presets/default-esm",
	"testEnvironment": "node",
	"extensionsToTreatAsEsm": [".ts"],
	"testMatch": ["./**/*.test.ts"],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"transform": {
		"^.+\\.ts$": [
			"ts-jest",
			{
				"tsconfig": "tests/tsconfig.json",
				"useESM": true
			}
		]
	},
	"verbose": true,
	"collectCoverage": true,
	"coverageDirectory": "tests/coverage",
	"collectCoverageFrom": ["src/**/*.ts"]
}
